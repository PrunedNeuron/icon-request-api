		"express-validator": "^6.5.0",
		"helmet": "^3.22.1",
		"http-status-codes": "^1.4.0",
		"pg": "^8.2.1",
		"pg-promise": "^10.5.6"
	},
	"engines": {
		"node": "12.18.0",
		"npm": "6.14.4"
	}
