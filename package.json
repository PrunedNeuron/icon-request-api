	"license": "MIT",
	"author": "ayush",
	"scripts": {
		"lint": "eslint . --ext .ts",
		"clean": "rm -rf dist",
		"cleanall": "rm -rf dist node_modules",
		"build": "yarn clean && tsc",
		"serve": "nodemon",
		"develop": "concurrently 'yarn clean && yarn build' 'yarn serve'",
		"start": "node dist/server.js",
		"pre": "cd client && rm -rf public .cache && yarn install && npx gatsby build && cd ..",
		"deploy": "yarn build && yarn pre && yarn develop",
		"heroku-postbuild": "cd client && rm -rf public .cache && yarn install && npx gatsby build && cd .. && yarn build"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/compression": "^1.7.0",
		"@types/cors": "^2.8.6",
		"@types/express": "^4.17.6",
		"@types/express-rate-limit": "^5.0.0",
		"@types/helmet": "^0.0.47",
		"@types/node": "^14.0.11",
		"@types/pg": "^7.14.3",
		"@typescript-eslint/eslint-plugin": "^3.1.0",
		"@typescript-eslint/parser": "^3.1.0",
		"browser-sync": "^2.26.7",
		"concurrently": "^5.2.0",
		"eslint": "^7.2.0",
		"nodemon": "^2.0.4",
		"ts-node": "^8.10.2",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.9.5"
	},
	"dependencies": {
		"bcrypt": "^5.0.0",
