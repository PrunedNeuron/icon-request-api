{
	"name": "typeorm-koa",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "nodemon",
		"build": "tsc",
		"watch": "tsc --watch",
		"start": "yarn build && node ./build/src/index.js",
		"build:client": "cd client && yarn install --production=false && yarn prod && cd ..",
		"build:server": "yarn install --production=false && tsc",
		"deploy": "yarn build:client && yarn build:server && pm2 start ./build/src/index.js"
	},
	"devDependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/koa": "^2.11.3",
		"@types/koa-bodyparser": "^4.3.0",
		"@types/koa-compress": "^4.0.0",
		"@types/koa-helmet": "^5.2.0",
		"@types/koa-logger": "^3.1.1",
		"@types/koa-router": "^7.4.1",
		"@types/koa__cors": "^3.0.1",
		"@types/koa__router": "^8.0.2",
		"@types/node": "^14.0.22",
		"@types/pg": "^7.14.4",
		"nodemon": "^2.0.4",
		"typescript": "^3.9.6"
	},
	"dependencies": {
		"@koa/cors": "^3.1.0",
		"@koa/router": "^9.3.1",
		"bcrypt": "^5.0.0",
		"http-status-codes": "^1.4.0",
		"koa": "^2.13.0",
		"koa-bodyparser": "^4.3.0",
		"koa-compress": "^5.0.1",
		"koa-helmet": "^5.2.0",
		"koa-logger": "^3.2.1",
		"pg": "^8.3.0",
		"typeorm": "^0.2.25"
	}
}
