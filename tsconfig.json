{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "preserve",
		"isolatedModules": true
	},
	"exclude": ["node_modules"],
	"include": [
		"next-env.d.ts",
		"mdx.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/pages/blog/[slug].tsx",
		"src/pages/blog.tsx"
	],
	"files": ["./mdx.d.ts"]
}
